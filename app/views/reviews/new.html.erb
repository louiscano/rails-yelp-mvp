<div class="p-5 col-3">
  <h1>Add a review</h1>

  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :rating %>
    <%= f.input :content %>
    <%= f.submit "Submit review", class: "btn btn-success mb-3" %>
  <% end %>
  <%= link_to "Back to restaurants", restaurants_path, class:"text-decoration-none btn btn-primary" %>
</div>
