<div class="p-5">
  <h3><%= @restaurant.name%></h3>
  <p>- <%= @restaurant.address %></p>
  <p>- <%= @restaurant.category %></p>
  <p>- <%= @restaurant.phone_number %></p>
  <% @restaurant.reviews.each do |review| %>
  <p>- <%= review.content %> - <%= review.rating %></p>
  <% end %>

<div>
  <%= link_to "Add Review", new_restaurant_review_path(@restaurant), class:"text-decoration-none btn btn-success" %>
  <%= link_to "Back to restaurants", restaurants_path, class:"text-decoration-none btn btn-primary" %>
</div>
</div>
